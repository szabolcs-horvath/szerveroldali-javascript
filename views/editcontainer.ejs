<%- include('header') -%>
<h1><%= container.name %> szerkesztése</h1>
<a href="/" class="btn btn-sm btn-secondary"><i class="bi bi-arrow-return-left"></i></a>
<form action="/container/new" method="post" style="margin-top: 8px;">
    <div class="form-group">
        <label for="nameInput">Név:</label>
        <input id="nameInput" name="nameInput" type="text" class="form-control" value="<%= container.name %>" placeholder="Adjon nevet a tárolónak!" />
    </div>
    <div class="form-group">
        <label for="colorInput">Szín:</label>
        <input id="colorInput" name="colorInput" type="color" class="form-control" value="<%= container.color %>" />
    </div>
    <button href="/container/edit/<%= container.id %>" class="btn btn-primary" style="margin-top: 16px;">Mentés</button>
</form>
<%- include('footer') -%>